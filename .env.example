# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/marquelytix

# Session Secret (generate a secure random string)
SESSION_SECRET=your-super-secure-session-secret-here

# API Keys (optional - fallback to demo mode if not provided)
HUGGINGFACE_API_TOKEN=hf_your_token_here

# Demo Mode (set to false to use real APIs)
DEMO_MODE=true

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration (prefix with VITE_ for client access)
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=Marquelytix
VITE_APP_VERSION=1.0.0

# Email Configuration (for report sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External Service URLs
REPLIT_DOMAINS=your-replit-domain.repl.co
